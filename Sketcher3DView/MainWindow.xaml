<Window x:Class="Sketcher3DView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sketcher3D" Height="500" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT BUTTON PANEL -->
        <StackPanel Grid.Column="0" Margin="10">
            <Button Content="Cube" Click="Cube_Click" Margin="5"/>
            <Button Content="Cuboid" Click="Cuboid_Click" Margin="5"/>
            <Button Content="Pyramid" Click="Pyramid_Click" Margin="5"/>
            <Button Content="Cylinder" Click="Cylinder_Click" Margin="5"/>
            <Button Content="Cone" Click="Cone_Click" Margin="5"/>
            <Button Content="Sphere" Click="Sphere_Click" Margin="5"/>

        </StackPanel>

        <!-- 3D VIEW -->
        <Viewport3D Grid.Column="1" Name="viewport"/>
    </Grid>
</Window>
